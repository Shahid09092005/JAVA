class Solution {
    public long countSubarrays(int[] nums, int k) {
        int max=-100;
        for(int t : nums){ // get the maximum in max
            if(max<t){
                max=t;
            }
        }
        int i=0;
        int j=0;
        int n=nums.length;
        int count_k=0;
        long subArray=0;
        while(j<n){
            if(nums[j]==max){
                count_k++;
            }
            while(count_k>=k){
                subArray += n-j;
                if(nums[i]==max){
                    count_k--;
                }
                i++;
            }
            j++;
        } 
        return subArray;         
    }
}
